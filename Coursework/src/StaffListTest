
import static org.junit.jupiter.api.Assertions.*;

import java.util.Hashtable;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

class StaffListTest {
	
	Staff staff = new Staff(123, "John", "Smith");
	Hashtable<Integer, Staff> staffList;
	
	@BeforeEach
	public void setup() {
		staffList = new Hashtable<Integer, Staff>();
		staffList.put(staff.getStaffID(), staff);
	}
	
	@Test
	void testAddStaffToList() {
		 assertTrue(staffList.containsKey(123));
	}

	@Test
	void testRemoveStaffFromList() {
		staffList.remove(123);
		assertFalse(staffList.containsKey(123));
	}

}
